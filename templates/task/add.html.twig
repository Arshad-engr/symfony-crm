{% extends 'base.html.twig' %}

{% block title %}Symfony-CRM Dashboard
{% endblock %}

{% block javascripts %}
<link
    href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css"
    rel="stylesheet" />
<script
    src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

{% endblock %}

{% block body %}

<!-- Page Wrapper -->
<div
    id="wrapper">

    <!-- Sidebar -->
    {% include 'includes/_sidebar.html.twig' %}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div
        id="content-wrapper" class="d-flex flex-column"> <!-- Main Content -->
        <div
            id="content">

            <!-- Topbar -->
            {% include 'includes/_topbar.html.twig' %}
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid"> {% for messages in app.flashes %}
                {% for message in messages %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
                {% endfor %}
                {% endfor %}
                <div class="row">

                    <div class="col-lg-7">
                        <div class="p-7">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Task!</h1>
                            </div>
                            {{ form_start(form) }}
                            <div class="form-group">
                                <label for="name" class="font-weight-bold">Name</label>
                                {{ form_widget(form.name) }}
                                {% for error in form.name.vars.errors %}
                                <div class="invalid-feedback d-block">
                                    {{ error.message }}
                                </div>
                                {% endfor %}
                            </div>
                            <div class="form-group">
                                <label for="last_name"
                                    class="font-weight-bold">Last Name</label>
                                {{ form_widget(form.description) }}
                                {% for error in form.description.vars.errors %}
                                <div class="invalid-feedback d-block">
                                    {{ error.message }}
                                </div>
                                {% endfor %}
                            </div>

                            <div class="form-group">
                                <label for="user"
                                    class="font-weight-bold">Assign User</label>
                                    {{ form_widget(form.user) }}
                                   
                            </div>
                           {{ form_row(form.add) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        {% include 'includes/_footer.html.twig' %}
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

{% endblock %}
